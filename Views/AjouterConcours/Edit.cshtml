@model WebApplication.Models.Concour

@{
    ViewBag.Title = "Edit";
}

<br>
<h3><strong>Modifier Concours</strong></h3>
<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_concours)

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Nom Concours : </strong></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nom_concours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nom_concours, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Date du Concours : </strong></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date_concours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Date_concours, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Date limite : </strong></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date_limite, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Date_limite, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Nombre de postes : </strong></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre_de_poste, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre_de_poste, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Statut : </strong></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Statut, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Statut, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Grade </strong></div>
        <div class="col-md-10">
            @Html.DropDownList("ID_grade", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_grade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Revenir à la liste des concours", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
