@model WebApplication.Models.Inscription

@{
    ViewBag.Title = "Connect";
}

<br>
<h1><strong>Se connecter </strong></h1>
<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Numéro inscription </strong></div>
        <div class="col-md-10">
            <span class="glyphicon glyphicon-user text-info"></span>
            @Html.EditorFor(model => model.ID_inscription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ID_inscription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><strong> Mot de passe </strong></div>
        <div class="col-md-10">
            <span class="glyphicon glyphicon-lock text-info"></span>
            @Html.EditorFor(model => model.Mot_de_passe, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Mot_de_passe, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-primary"><span class="glyphicon glyphicon-log-in"></span> &nbsp; Inscription</button>
            @*<input type="submit" value="Inscription" class="btn btn-primary" /><br />*@
            <br><br>
            <a id="LinkButtonMDP" href="javascript:__doPostBack('ctl00$LinkButtonMDP','')" style="font-weight:bold;">N° inscription ou Mot de passe oublié ?</a>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Revenir à la liste des candidats", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
